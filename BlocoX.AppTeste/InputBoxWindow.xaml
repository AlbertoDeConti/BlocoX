<Window x:Class="BlocoX.AppTeste.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlocoX.AppTeste"
        mc:Ignorable="d"
        Title=""
        MinWidth="350"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        >
    <StackPanel Name="Panel" Orientation="Vertical" VerticalAlignment="Top" Margin="5">
        <TextBlock x:Name="txtDescricao" TextWrapping="Wrap" Text="Inforamção sobre input" Margin="5" />
        <TextBox Name="txtValor" Height="23" TextWrapping="Wrap" Text="TextBox" KeyUp="txtValor_KeyUp" />
        <WrapPanel Margin="5"
                   HorizontalAlignment="Right">
            <Button x:Name="btnOk" Content="Ok" 
                    VerticalAlignment="Top"
                    Margin="3"
                    Width="90" Click="btnOk_Click" />
            <Button x:Name="btnCancelar" Content="Cancelar"
                    VerticalAlignment="Top" 
                    Margin="3"
                    Width="90" Click="btnCancelar_Click" />
        </WrapPanel>
    </StackPanel>
</Window>
